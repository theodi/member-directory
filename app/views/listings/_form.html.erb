<div class='row-fluid'>

  <div class='span6'>
    <%= form_field f, :name do %>
      <%= f.text_field :name, :class => 'input', :required => 'required',
                       :'data-bind' => "value: name, valueUpdate: 'afterkeydown'" %>
    <% end %>

    <%= form_field f, :url do %>
    	<%= f.url_field :url, :class => 'input', :placeholder => 'http://your-homepage.com',
                      :'data-bind' => "value: url, valueUpdate: 'afterkeydown'" %>
    <% end %>

    <%= form_field f, :tagline do %>
      <%= f.text_field :tagline, :class => 'input',
                       :'data-bind' => "value: tagline, valueUpdate: 'afterkeydown'" %>
    <% end %>

    <%= form_field f, :description do %>
    	<%= f.text_area :description,
                      :class => 'input',
                      :rows => '8',
                      :maxlength => @member.listing.character_limit,
                      :required => 'required',
                      :'data-bind' => "value: description, valueUpdate: 'afterkeydown'" %>
    	<span class="help-block"><small>Plain text only, but you can use paragraphs</small></span>
    	<span class="help-block" id="limit"><%= "Limit of #{@member.listing.character_limit} characters" %></span>
    	<script>
    	$(document).ready(function() {
        var max = <%= "#{@member.listing.character_limit}" %> - $('#member_listing_attributes_description').val().replace(/(\r\n|\n|\r)/g,"  ").length
    		$('#limit').html('<span id="remaining">'+ max +'</span> characters remaining');
    		$('#member_listing_attributes_description').keyup(function() {
          var max = <%= "#{@member.listing.character_limit}" %>
    			var len = $(this).val().replace(/(\r\n|\n|\r)/g,"  ").length;
    			var rem = max - len
    			$('#remaining').html(rem);
    		});
        org_name = $('#member_listing_attributes_name')
        org_name.val($('<div/>').html(org_name.val()).text())
    	});
    	</script>
    <% end %>

    <% unless @member.product_name == "supporter" %>

      <%= form_field f, :logo do %>
    		<%= f.file_field :logo, :accept => "image/*",
                         :'data-bind' => "event: {change: updateImage}" %>
    		<%= f.hidden_field :logo_cache %>
      <% end %>

    <% end %>

  </div>

  <div class='span6'>

    <%= form_field f, :contact_name do %>
      <%= f.text_field :contact_name, :class => 'input-large',
                       :'data-bind' => "value: contactName, valueUpdate: 'afterkeydown'" %>
    <% end %>

    <%= form_field f, :contact_phone do %>
      <%= f.text_field :contact_phone, :class => 'input-large', :type => 'tel',
                       :'data-bind' => "value: contactPhone, valueUpdate: 'afterkeydown'" %>
    <% end %>

    <%= form_field f, :contact_email do %>
      <%= f.email_field :contact_email, :class => 'input-large',
                       :'data-bind' => "value: contactEmail, valueUpdate: 'afterkeydown'",
                       :pattern => "[a-zA-Z0-9._%+-]+@[a-zA-Z0-9-]+\\.[a-zA-Z.]+",
                       :title => "Please enter a valid email address" %>
    <% end %>

    <%= form_field f, :twitter do %>
      <%= f.text_field :twitter, :class => 'input-large', :placeholder => '@username',
                       :'data-bind' => "value: twitter, valueUpdate: 'afterkeydown'" %>
    <% end %>

    <%= form_field f, :facebook do %>
    	<%= f.url_field :facebook, :class => 'input-large', :placeholder => 'http://facebook.com/pages/your-page',
                      :'data-bind' => "value: facebook, valueUpdate: 'afterkeydown'" %>
    <% end %>

    <%= form_field f, :linkedin do %>
    	<%= f.url_field :linkedin, :class => 'input-large', :placeholder => 'http://linkedin.com/company/your-org',
                      :'data-bind' => "value: linkedin, valueUpdate: 'afterkeydown'" %>
    <% end %>
  </div>

</div>
