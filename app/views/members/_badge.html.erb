<!-- BEGIN ODI MEMBER BADGE -->
<div class="odi-badge odi-<%= @member.product_name %> <%= @size || "small" %> <%= @align %> <%= @colour || "black" %>">
  <%= stylesheet_link_tag "badge.css" %>
  <% content_for :badge_details do %>
    <ul class="details">
      <li>Open Data Institute <%= @member.membership_description.titleize %></li>
      <li>Active since <%= @member.created_at.to_date %></li>
      <li>London, UK</li>
    </ul>
  <% end %>
  <% if @member.organization? %>
    <a href="<%= member_url(@member) %>"><%= yield :badge_details %></a>
  <% else %>
    <%= yield :badge_details %>
  <% end %>
</div>
<!-- END ODI MEMBER BADGE -->
