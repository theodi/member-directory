<h2>Edit your organisation profile</h2>

<%= error_messages(@organization) %>

<%= form_for(@organization, :url => '/organizations', :html => {:class => 'form-horizontal', :multipart => true}) do |f| %>

	<div class='control-group'>
		<%= f.label :name, :class => 'control-label' %>
		<div class='controls'>
			<%= f.text_field :name, :class => 'input-xlarge' %>
		</div>
	</div>

	<div class='control-group'>
		<%= f.label :description, :class => 'control-label' %>
		<div class='controls'>
			<%= f.text_area :description, :class => 'input-xlarge', :rows => '8' %>
			<span class="help-block"><%= "Limit of #{@organization.character_limit} characters" %></span>
			<!-- We need to do some fancy JS countdown thing. That will come later -->
		</div>
	</div>
	
	<div class='control-group'>
		<%= f.label :email, :class => 'control-label' %>
		<div class='controls'>
			<%= f.text_field :email, :class => 'input-xlarge' %>
		</div>
	</div>

	<div class='control-group'>
		<%= f.label :url, :class => 'control-label' %>
		<div class='controls'>
			<%= f.text_field :url, :class => 'input-xlarge' %>
		</div>
	</div>

	<% unless @organization.member.product_name == "supporter" %>

		<div class='control-group'>
			<%= f.label :logo, :class => 'control-label' %>
			<div class='controls'>
				<%= f.file_field :logo %>
				<%= f.hidden_field :logo_cache %>
			</div>
		</div>
	
	<% end %>
	
    <div class="form-actions">
      <%= f.submit 'Submit', :class => 'btn btn-primary' %>
    </div>

<% end %>